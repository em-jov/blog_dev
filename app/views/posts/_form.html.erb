<div>
  <%= form.label :title, "Title:" %>
  <%= form.text_field :title %>
</div>
<div>
  <%= form.label :short_description, "Short description:" %><br>
  <%= form.text_area :short_description %>
</div>
<div>
  <%= form.label :content, "Content:" %><br>
  <%= form.rich_text_area :content %>
</div>
<div>
  <%= form.label :tags, "Tags:" %><br>
  <%= form.text_area :tags, value: @post.tags.map(&:name).join(', ') %>
</div>
<div>
  <%= form.submit  %>
</div>
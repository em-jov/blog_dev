<h2><%= @post.title %></h2>
<h5><%= @post.slug %></h5>
<textarea><%= @post.short_description %></textarea><br>
<textarea><%= @post.content %></textarea><br>
<p>Finished: <%= @post.draft ? "No" : "Yes" %></p>
<p>Published: <%= @post.private ? "No" : "Yes" %></p>
<%= link_to 'Edit', edit_post_path(slug: @post.slug) %>
|
<%= link_to t(:delete), post_path(slug: @post.slug),
                      class: "delete-button", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<br><br>
<% if @post.draft && @post.private %>
  <%= link_to "Mark as completed", draft_post_path(slug: @post.slug) %>
<% end %>

<% if !@post.draft && @post.private %>
  <%= link_to "Mark as draft", draft_post_path(slug: @post.slug) %> 
<% end %>

<% if @post.private && !@post.draft %>
|
  <%= link_to "Publish", private_post_path(slug: @post.slug) %>
<% end %>

<% if !@post.private && !@post.draft %>
  <%= link_to "Hide", private_post_path(slug: @post.slug) %> 
<% end %>



